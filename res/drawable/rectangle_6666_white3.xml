<?xml version="1.0" encoding="UTF-8"?>
<!-- 带有边角的长方形 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
    <!-- 定义填充渐变颜色 -->
    <gradient
        android:angle="45"
        android:endColor="@color/llwhite"
        android:startColor="@color/llwhite" />

    <!-- 设置内填充 -->
    <padding
        android:bottom="6dp"
        android:left="12dp"
        android:right="12dp"
        android:top="6dp" />

    <!-- 设置圆角矩形 -->
    <corners android:radius="6dp" />

    <!-- 设置边框 -->
    <stroke
        android:width="1dip"
        android:color="@color/white" />
</shape>